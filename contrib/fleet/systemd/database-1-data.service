[Unit]
Description=database-1-data

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/usr/bin/docker pull paulczar/percona-galera
ExecStart=/bin/sh -c "docker inspect database-1-data >/dev/null 2>&1 || docker run --name database-1-data -v /var/lib/mysql paulczar/percona-galera true"

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-Conflicts=database-*-data.service