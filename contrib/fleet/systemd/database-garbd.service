[Unit]
Description=database-garbd

[Service]
EnvironmentFile=/etc/environment
TimeoutStartSec=20m
ExecStartPre=/usr/bin/docker pull docker-registry.paragusit.com/galeramariadb-ubuntu:14.04:latest
ExecStart=/bin/sh -c "/usr/bin/docker run --name database-garbd --rm -p 3306:3306 -p 4444:4444 -p 4567:4567 -p 4568:4568 -e PUBLISH=4567 -e HOST=$COREOS_PRIVATE_IPV4 -e CLUSTER=openstack docker-registry.paragusit.com/galeramariadb-ubuntu:14.04:latest /app/bin/garbd"
ExecStop=/usr/bin/docker stop database-garbd