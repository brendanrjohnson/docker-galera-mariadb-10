[Unit]
Description=database-2-data

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStartPre=/usr/bin/docker pull docker-registry.paragusit.com/galeramariadb-ubuntu:14.04
ExecStart=/bin/sh -c "docker inspect database-2-data >/dev/null 2>&1 || docker run --name database-2-data -v /var/lib/mysql docker-registry.paragusit.com/galeramariadb-ubuntu:14.04 true"

[Install]
WantedBy=multi-user.target

[X-Fleet]
X-Conflicts=database-*-data.service